<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.yuzj.autolink.plc.control.ReadWriteControl"
      spacing="20" VBox.vgrow="ALWAYS" style="-fx-padding: 25; -fx-background-color: #f0f2f5;">
    <!-- 主要内容区域 -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- 左侧操作面板 -->
        <VBox spacing="20" HBox.hgrow="ALWAYS"
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 4);">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <!-- 操作面板标题 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="数据操作面板" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 18px;"/>
                <Rectangle width="1" height="20" fill="#ecf0f1"/>
                <Label text="实时数据交互与控制" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
            </HBox>

            <!-- 输入区域 -->
            <GridPane hgap="15" vgap="20">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="90"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="180" prefWidth="220"/>
                    <ColumnConstraints halignment="CENTER" minWidth="110"/>
                </columnConstraints>

                <!-- 地址输入行 -->
                <Label text="PLC地址:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextField fx:id="readWriteAddressField" GridPane.columnIndex="1"
                           promptText="输入地址 (如: DB1.DBX0.0)"
                           style="-fx-background-radius: 4; -fx-border-color: #dde1e6; -fx-border-radius: 4; -fx-border-width: 1; -fx-padding: 8;"/>
                <Button fx:id="readButton" text="读取数据" onAction="#handleRead" GridPane.columnIndex="2"
                        style="-fx-background-color: linear-gradient(to right, #3498db, #2980b9); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 16; -fx-cursor: hand;"/>

                <!-- 值输入行 -->
                <Label text="数据值:" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextField fx:id="readWriteValueField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                           promptText="输入要写入的数值"
                           style="-fx-background-radius: 4; -fx-border-color: #dde1e6; -fx-border-radius: 4; -fx-border-width: 1; -fx-padding: 8;"/>
                <Button fx:id="writeButton" text="写入数据" onAction="#handleWrite" GridPane.rowIndex="1"
                        GridPane.columnIndex="2"
                        style="-fx-background-color: linear-gradient(to right, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 16; -fx-cursor: hand;"/>

                <!-- 数据类型选择行 -->
                <Label text="数据类型:" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <HBox spacing="12" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2">
                    <ComboBox fx:id="dataTypeCombo" prefWidth="150"
                              style="-fx-background-radius: 4; -fx-border-color: #dde1e6; -fx-border-radius: 4; -fx-padding: 4;"/>
                    <Button fx:id="refreshTypesButton" text="刷新类型" onAction="#handleRefreshTypes"
                            style="-fx-background-color: #f8f9fa; -fx-text-fill: #7f8c8d; -fx-font-weight: bold; -fx-border-color: #dde1e6; -fx-border-radius: 4; -fx-padding: 8 16; -fx-cursor: hand;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="clearLogButton" text="清空日志" onAction="#handleClearLog"
                            style="-fx-background-color: #f8f9fa; -fx-text-fill: #7f8c8d; -fx-font-weight: bold; -fx-border-color: #dde1e6; -fx-border-radius: 4; -fx-padding: 8 16; -fx-cursor: hand;"/>
                </HBox>
            </GridPane>

            <!-- 快捷操作区域 -->
            <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
                <Label text="批量操作:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <Button fx:id="readMultipleButton" text="批量读取" onAction="#handleReadMultiple"
                        style="-fx-background-color: linear-gradient(to right, #9b59b6, #8e44ad); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 16; -fx-cursor: hand;"/>
                <Button fx:id="writeMultipleButton" text="批量写入" onAction="#handleWriteMultiple"
                        style="-fx-background-color: linear-gradient(to right, #e67e22, #d35400); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 16; -fx-cursor: hand;"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- 分隔线 -->
            <Separator style="-fx-background-color: #ecf0f1;"/>

            <!-- 操作日志区域 -->
            <VBox spacing="8" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="操作日志" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 16px;"/>
                    <Rectangle width="1" height="16" fill="#ecf0f1"/>
                    <Label fx:id="logEntryCount" text="0 条记录" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                </HBox>
                <TextArea fx:id="logArea" prefRowCount="8" VBox.vgrow="ALWAYS"
                          style="-fx-font-family: 'Segoe UI', 'Roboto', sans-serif; -fx-font-size: 13px; -fx-border-color: #e6e9ed; -fx-background-color: #fafbfc; -fx-border-radius: 4; -fx-background-radius: 4;"
                          editable="false" focusTraversable="false"/>
            </VBox>
        </VBox>
    </HBox>

    <!-- 历史记录面板 -->
    <VBox spacing="10"
          style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 4);">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="操作历史记录" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 16px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="最近操作追踪" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
        </HBox>

        <!-- 历史记录表格 -->
        <TableView fx:id="historyTable" prefHeight="200" style="-fx-border-color: #e6e9ed; -fx-border-radius: 4;">
            <columns>
                <TableColumn fx:id="timestampColumn" text="时间戳" prefWidth="150" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="operationColumn" text="操作类型" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="addressColumn" text="PLC地址" prefWidth="140" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="valueColumn" text="数据值" prefWidth="120" style="-fx-alignment: CENTER-RIGHT;"/>
                <TableColumn fx:id="resultColumn" text="执行状态" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="dataTypeColumn" text="数据类型" prefWidth="110" style="-fx-alignment: CENTER;"/>
            </columns>
            <placeholder>
                <Label text="暂无操作记录" style="-fx-text-fill: #95a5a6; -fx-padding: 30 0;"/>
            </placeholder>
        </TableView>
    </VBox>

    <!-- 状态栏 -->
    <HBox spacing="12" alignment="CENTER_LEFT"
          style="-fx-padding: 12 16; -fx-background-color: #2c3e50; -fx-background-radius: 6;">
        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="系统状态:" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
            <Label fx:id="statusLabel" text="运行正常"
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px; -fx-font-weight: bold;"/>
        </HBox>
        <Region HBox.hgrow="ALWAYS"/>
        <HBox spacing="8" alignment="CENTER_RIGHT">
            <Label text="最后操作:" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
            <Label fx:id="lastOperationTime" text="--:--:--"
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px; -fx-font-weight: bold;"/>
        </HBox>
    </HBox>
</VBox>