<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.yuzj.autolink.plc.control.ReadWriteControl"
      spacing="15" VBox.vgrow="ALWAYS" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <!-- 页面标题 -->
    <HBox alignment="CENTER_LEFT">
        <Label text="PLC读写操作" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="实时数据交互与控制" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
    </HBox>

    <!-- 主要内容区域 - 左右分栏 -->
    <HBox spacing="15" VBox.vgrow="ALWAYS">
        <!-- 左侧操作面板 -->
        <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- 操作面板标题 -->
            <Label text="数据读写操作" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-font-size: 18px;"/>

            <!-- 输入区域 -->
            <GridPane hgap="15" vgap="18">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="70"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="150" prefWidth="200"/>
                    <ColumnConstraints halignment="CENTER" minWidth="100"/>
                </columnConstraints>

                <!-- 地址输入行 -->
                <Label text="PLC地址:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextField fx:id="readWriteAddressField" GridPane.columnIndex="1"
                           promptText="例如: DB1.DBX0.0"
                           style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                <Button fx:id="readButton" text="读取" onAction="#handleRead" GridPane.columnIndex="2"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 6 12;"/>

                <!-- 值输入行 -->
                <Label text="数据值:" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextField fx:id="readWriteValueField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                           promptText="输入要写入的值"
                           style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                <Button fx:id="writeButton" text="写入" onAction="#handleWrite" GridPane.rowIndex="1" GridPane.columnIndex="2"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 6 12;"/>

                <!-- 数据类型选择行 -->
                <Label text="数据类型:" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2">
                    <ComboBox fx:id="dataTypeCombo" prefWidth="120"
                              style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                    <Button fx:id="refreshTypesButton" text="刷新类型" onAction="#handleRefreshTypes"
                            style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 6 12;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="clearLogButton" text="清空日志" onAction="#handleClearLog"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 6 12;"/>
                </HBox>
            </GridPane>

            <!-- 快捷操作区域 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="快捷操作:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <Button fx:id="readMultipleButton" text="批量读取" onAction="#handleReadMultiple"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 6 12;"/>
                <Button fx:id="writeMultipleButton" text="批量写入" onAction="#handleWriteMultiple"
                        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 6 12;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="connectionStatus" text="未连接" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
            </HBox>

            <!-- 操作日志区域 -->
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Label text="操作日志:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextArea fx:id="logArea" prefRowCount="8" VBox.vgrow="ALWAYS"
                          style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-border-color: #ecf0f1; -fx-background-color: #fdfdfd; -fx-border-radius: 5;"
                          editable="false" focusTraversable="false"/>
                <HBox alignment="CENTER_RIGHT">
                    <Label fx:id="logEntryCount" text="0 条记录" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>

    <!-- 数据历史记录卡片 -->
    <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="操作历史记录" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-font-size: 16px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="最近50条记录" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
        </HBox>

        <!-- 历史记录表格 -->
        <TableView fx:id="historyTable" prefHeight="180" style="-fx-border-color: #ecf0f1;">
            <columns>
                <TableColumn fx:id="timestampColumn" text="时间" prefWidth="150" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="operationColumn" text="操作类型" prefWidth="80" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="addressColumn" text="PLC地址" prefWidth="120" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="valueColumn" text="数据值" prefWidth="100" style="-fx-alignment: CENTER-RIGHT;"/>
                <TableColumn fx:id="resultColumn" text="执行结果" prefWidth="80" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="dataTypeColumn" text="数据类型" prefWidth="100" style="-fx-alignment: CENTER;"/>
            </columns>
            <placeholder>
                <Label text="暂无操作记录" style="-fx-text-fill: #95a5a6;"/>
            </placeholder>
        </TableView>
    </VBox>

    <!-- 状态栏 -->
    <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #34495e; -fx-background-radius: 6;">
        <Label fx:id="statusLabel" text="系统就绪" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="最后操作:" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
        <Label fx:id="lastOperationTime" text="--:--:--" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px; -fx-font-weight: bold;"/>
    </HBox>
</VBox>
